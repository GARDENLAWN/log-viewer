<script>
    require([
        'jquery',
        'Magento_Ui/js/modal/confirm',
        'mage/translate'
    ], function ($, confirm, $t) {
        $(document).ready(function () {
            const defaultLines = 100;
            const formKey = '<?= $formKey ?>';

            function formatLog(logData) {
                let logText = logData;
                if (typeof logData === 'object' && logData !== null && 'content' in logData) {
                    logText = logData.content;
                }

                if (typeof logText !== 'string') {
                    console.error("logText is not a string:", logText);
                    return '<div class="log-line error">Error: Invalid log format received.</div>';
                }

                const lines = logText.split('\n');
                let html = '';
                lines.forEach(function (line) {
                    if (line.trim() === '') {
                        return;
                    }
                    let className = '';
                    const escapedLine = $('<div>').text(line).html();
                    let processedLine = escapedLine;

                    const match = line.match(/(\w+)\.(INFO|WARNING|ERROR|CRITICAL|DEBUG|NOTICE|ALERT|EMERGENCY)/);
                    if (match && match[2]) {
                        className = match[2].toLowerCase();
                        if (className === 'critical') {
                            const fullMatch = match[0];
                            processedLine = escapedLine.replace(fullMatch, '<strong>' + fullMatch + '</strong>');
                        }
                    }

                    html += '<div class="log-line ' + className + '">' + processedLine + '</div>';
                });
                return html;
            }

            // Trigger file download via AJAX
            $('body').on('click', '.download-link', function (e) {
                e.preventDefault();
                const filePath = $(this).attr('data-file-path');
                let logContainer = $(this).parents('tr').find('.log-container').first();
                let loadMoreButton = $(this).parents('tr').find('.load-more-link').first();

                $(this).data('lines-loaded', defaultLines);

                $.ajax({
                    url: '<?= $ajaxUrl ?>',
                    type: 'post',
                    data: {file_path: filePath, lines: defaultLines, form_key: formKey},
                    showLoader: true,
                    success: function (response) {
                        logContainer.html(formatLog(response));
                        loadMoreButton.show();
                    },
                    error: function (xhr, status, error) {
                        console.error('Error downloading file: ' + error);
                        logContainer.html('Error: ' + xhr.responseText);
                        loadMoreButton.hide();
                    }
                });
            });

            // Load more lines
            $('body').on('click', '.load-more-link', function (e) {
                e.preventDefault();
                const filePath = $(this).attr('data-file-path');
                let logContainer = $(this).parents('tr').find('.log-container').first();
                let downloadButton = $(this).parents('tr').find('.download-link').first();

                let currentLinesLoaded = downloadButton.data('lines-loaded') || defaultLines;
                let newLinesToLoad = currentLinesLoaded + defaultLines;

                $.ajax({
                    url: '<?= $ajaxUrl ?>',
                    type: 'post',
                    data: {file_path: filePath, lines: newLinesToLoad, form_key: formKey},
                    showLoader: true,
                    success: function (response) {
                        logContainer.html(formatLog(response));
                        downloadButton.data('lines-loaded', newLinesToLoad);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading more lines: ' + error);
                        logContainer.html('Error: ' + xhr.responseText);
                    }
                });
            });

            // Clear log file
            $('body').on('click', '.clear-link', function (e) {
                e.preventDefault();
                const filePath = $(this).attr('data-file-path');

                confirm({
                    content: $t('Are you sure you want to clear this log file? This action cannot be undone.'),
                    actions: {
                        confirm: function () {
                            $.ajax({
                                url: '<?= $clearUrl ?>',
                                type: 'post',
                                data: {file_path: filePath, form_key: formKey},
                                showLoader: true,
                                success: function (response) {
                                    if (response.success) {
                                        location.reload();
                                    } else {
                                        alert($t('Error clearing log file: ') + response.message);
                                    }
                                },
                                error: function (xhr, status, error) {
                                    console.error('Error clearing file: ' + error);
                                    alert($t('An error occurred while clearing the file.'));
                                }
                            });
                        }
                    }
                });
            });

            // Clear all log files (Sequential approach)
            $('body').on('click', '#clear-all-logs', function (e) {
                e.preventDefault();

                // Collect all file paths from the DOM
                var filesToClear = [];
                $('.clear-link').each(function() {
                    var path = $(this).attr('data-file-path');
                    if (path) {
                        filesToClear.push(path);
                    }
                });

                if (filesToClear.length === 0) {
                    alert($t('No log files found to clear.'));
                    return;
                }

                confirm({
                    content: $t('Are you sure you want to clear all log files? This action cannot be undone.'),
                    actions: {
                        confirm: function () {
                            $('body').trigger('processStart'); // Start global loader

                            var errors = [];

                            // Function to process files one by one
                            function processNextFile() {
                                if (filesToClear.length === 0) {
                                    // All files processed
                                    $('body').trigger('processStop');

                                    if (errors.length > 0) {
                                        console.error('Errors occurred while clearing some files:', errors);
                                    }
                                    location.reload();
                                    return;
                                }

                                var filePath = filesToClear.shift(); // Get and remove the first file from the queue

                                $.ajax({
                                    url: '<?= $clearUrl ?>',
                                    type: 'post',
                                    data: {
                                        file_path: filePath,
                                        form_key: formKey
                                    },
                                    // No individual loader, we use the global one
                                    success: function (response) {
                                        if (!response.success) {
                                            errors.push(filePath + ': ' + response.message);
                                        }
                                    },
                                    error: function (xhr, status, error) {
                                        errors.push(filePath + ': ' + error);
                                    },
                                    complete: function () {
                                        // Recursively call to process the next file
                                        processNextFile();
                                    }
                                });
                            }

                            // Start processing
                            processNextFile();
                        }
                    }
                });
            });

            // Automatically load logs on page load
            $('.download-link').each(function() {
                $(this).trigger('click');
            });
        });
    });
</script>
