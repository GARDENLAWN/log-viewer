        background-color: #f2dede;
        color: #a94442;
    }
</style>

<script>
    require([
        'jquery',
        'Magento_Ui/js/modal/confirm',
        'mage/translate'
    ], function ($, confirm, $t) {
        $(document).ready(function () {
            const defaultLines = 100;

            function formatLog(logText) {
                const lines = logText.split('\\n');
                let html = '';
                lines.forEach(function(line) {
                    let className = '';
                    if (line.includes('INFO')) {
                        className = 'info';
                    } else if (line.includes('WARNING')) {
                        className = 'warning';
                    } else if (line.includes('ERROR')) {
                        className = 'error';
                    }
                    html += '<div class="log-line ' + className + '">' + line + '</div>';
                });
                return html;
            }

            // Trigger file download via AJAX
            $('body').on('click', '.download-link', function (e) {
                e.preventDefault();
                const filePath = $(this).attr('data-file-path');
                let logContainer = $(this).parents('tr').find('.log-container').first();
                let loadMoreButton = $(this).parents('tr').find('.load-more-link').first();

                // Reset lines loaded for this file
                $(this).data('lines-loaded', defaultLines);

                $.ajax({
                    url: '<?= $ajaxUrl ?>',
                    type: 'post',
                    data: {file_path: filePath, lines: defaultLines},
                    showLoader: true,
                    success: function (response) {
                        logContainer.html(formatLog(response));
                        loadMoreButton.show();
                    },
                    error: function (xhr, status, error) {
                        console.error('Error downloading file: ' + error);
                        logContainer.html('Error: ' + xhr.responseText);
                        loadMoreButton.hide();
                    }
                });
            });

            // Load more lines
            $('body').on('click', '.load-more-link', function (e) {
                e.preventDefault();
                const filePath = $(this).attr('data-file-path');
                let logContainer = $(this).parents('tr').find('.log-container').first();
                let downloadButton = $(this).parents('tr').find('.download-link').first();

                let currentLinesLoaded = downloadButton.data('lines-loaded') || defaultLines;
                let newLinesToLoad = currentLinesLoaded + defaultLines;

                $.ajax({
                    url: '<?= $ajaxUrl ?>',
                    type: 'post',
                    data: {file_path: filePath, lines: newLinesToLoad},
                    showLoader: true,
                    success: function (response) {
                        logContainer.html(formatLog(response));
                        downloadButton.data('lines-loaded', newLinesToLoad); // Update lines loaded
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading more lines: ' + error);
                        logContainer.html('Error: ' + xhr.responseText);
                    }
                });
            });

            // Clear log file
            $('body').on('click', '.clear-link', function (e) {
                e.preventDefault();
                const filePath = $(this).attr('data-file-path');

                confirm({
                    content: $t('Are you sure you want to clear this log file? This action cannot be undone.'),
                    actions: {
                        confirm: function () {
                            $.ajax({
                                url: '<?= $clearUrl ?>',
                                type: 'post',
                                data: {file_path: filePath},
                                showLoader: true,
                                success: function (response) {
                                    if (response.success) {
                                        location.reload();
                                    } else {
                                        alert($t('Error clearing log file: ') + response.message);
                                    }
                                },
                                error: function (xhr, status, error) {
                                    console.error('Error clearing file: ' + error);
                                    alert($t('An error occurred while clearing the file.'));
                                }
                            });
                        }
                    }
                });
            });

            // Clear all log files
            $('body').on('click', '#clear-all-logs', function (e) {
                e.preventDefault();

                confirm({
                    content: $t('Are you sure you want to clear all log files? This action cannot be undone.'),
                    actions: {
                        confirm: function () {
                            $.ajax({
                                url: '<?= $clearAllUrl ?>',
                                type: 'post',
                                showLoader: true,
                                success: function (response) {
                                    if (response.success) {
                                        location.reload();
                                    } else {
                                        alert($t('Error clearing log files: ') + response.message);
                                    }
                                },
                                error: function (xhr, status, error) {
                                    console.error('Error clearing files: ' + error);
                                    alert($t('An error occurred while clearing the files.'));
                                }
                            });
                        }
                    }
                });
            });
        });
    });
</script>
