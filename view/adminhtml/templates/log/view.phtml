<?php
declare(strict_types=1);

use GardenLawn\LogViewer\Block\Adminhtml\Log\View;
use Magento\Framework\Exception\FileSystemException;

/** @var View $block */
try {
    $logFiles = $block->getLogFiles();
} catch (FileSystemException $e) {

}
$ajaxUrl = $block->getAjaxUrl();

?>
<table class="admin__table-secondary">
    <thead>
    <tr class="admin__table-row">
        <th style="width: 15%" class="admin__table-th"><?= $block->escapeHtml(__('File Name')) ?></th>
        <th style="width: 10%" class="admin__table-th"><?= $block->escapeHtml(__('Actions')) ?></th>
        <th style="width: 75%" class="admin__table-th"></th>
    </tr>
    </thead>
    <tbody>
    <?php if (count($logFiles) > 0) : ?>
        <?php foreach ($logFiles as $logFile) : ?>
            <tr class="admin__table-row">
                <td class="admin__table-td"><?= $block->escapeHtml($this->getHumanName($logFile)) ?></td>
                <td class="admin__table-td">
                    <a href="#" class="download-link" data-file-path="<?= $logFile ?>"
                       target="_blank"><?= $block->escapeHtml(__('Download')) ?></a>
                </td>
                <td class="admin__table-td">
                    <label>
                        <textarea rows="1" style="width: 100%"></textarea>
                    </label>
                </td>
            </tr>
        <?php endforeach; ?>
    <?php else : ?>
        <tr class="admin__table-row">
            <td colspan="2" class="admin__table-td"><?= $block->escapeHtml(__('No log files found.')) ?></td>
        </tr>
    <?php endif; ?>
    </tbody>
</table>

