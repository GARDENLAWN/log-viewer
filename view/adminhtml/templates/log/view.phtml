/** @var View $block */
try {
    $logFiles = $block->getLogFiles();
} catch (FileSystemException $e) {
    $logFiles = [];
}
$ajaxUrl = $block->getAjaxUrl();
$clearUrl = $block->getClearUrl();
$clearAllUrl = $block->getClearAllUrl();

?>
<table class="admin__table-secondary">
    <thead>
    <tr class="admin__table-row">
        <th style="width: 15%" class="admin__table-th"><?= $block->escapeHtml(__('File Name')) ?></th>
        <th style="width: 10%" class="admin__table-th">
            <?= $block->escapeHtml(__('Actions')) ?>
            <button type="button" id="clear-all-logs" class="action-default">
                <span><?= $block->escapeHtml(__('Clear All')) ?></span>
            </button>
        </th>
        <th style="width: 75%" class="admin__table-th"></th>
    </tr>
    </thead>
    <tbody>
    <?php if (count($logFiles) > 0) : ?>
        <?php foreach ($logFiles as $logFile) : ?>
            <tr class="admin__table-row">
                <td class="admin__table-td"><?= $block->escapeHtml($this->getHumanName($logFile)) ?></td>
                <td class="admin__table-td">
                    <button type="button" class="action-default download-link" data-file-path="<?= $logFile ?>">
                        <span><?= $block->escapeHtml(__('View Last 100 Lines')) ?></span>
                    </button>
                    <button type="button" class="action-default load-more-link" data-file-path="<?= $logFile ?>" style="display:none;">
                        <span><?= $block->escapeHtml(__('Load More')) ?></span>
                    </button>
                    <button type="button" class="action-default clear-link" data-file-path="<?= $logFile ?>">
                        <span><?= $block->escapeHtml(__('Clear')) ?></span>
                    </button>
                </td>
                <td class="admin__table-td">
                    <div class="log-container"></div>
                </td>
            </tr>
        <?php endforeach; ?>
    <?php else : ?>
        <tr class="admin__table-row">
            <td colspan="3" class="admin__table-td"><?= $block->escapeHtml(__('No log files found.')) ?></td>
        </tr>
