                        <span><?= $block->escapeHtml(__('View Last 100 Lines')) ?></span>
                    </button>
                    <button type="button" class="action-default load-more-link" data-file-path="<?= $logFile ?>"
                            style="display:none;">
                        <span><?= $block->escapeHtml(__('Load More')) ?></span>
